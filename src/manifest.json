{
    "manifest_version": 2,
    "name": "Alibaba Container",
    "version": "0.0.1",

    "description": "Alibaba Container isolates your Alibaba and Aliexpress activity from the rest of your web activity in order to prevent Alibaba from tracking you outside of their ecosystem via third party cookies.",

    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },

    "applications": {
      "gecko": {
        "id": "@contain-amzn",
        "strict_min_version": "67.0"
      }
    },

    "homepage_url": "https://github.com/syslev/contain-alibaba",

    "permissions": [
        "<all_urls>",
        "browsingData",
        "contextualIdentities",
        "cookies",
        "management",
        "storage",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
